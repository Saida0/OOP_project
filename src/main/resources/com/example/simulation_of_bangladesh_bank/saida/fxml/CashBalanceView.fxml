<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulation_of_bangladesh_bank.saida.controller.CashBalanceController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <!-- Page Header -->
      <VBox spacing="5.0">
         <children>
            <Label text="Government Cash Balance Management">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Manage government cash balance with Bangladesh Bank">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
      </VBox>
      
      <!-- Cash Balance Overview -->
      <HBox spacing="20.0">
         <children>
            <VBox alignment="CENTER" spacing="15.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
               <children>
                  <Label text="">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
                  <Label text="Current Cash Balance">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblCurrentBalance" text="৳0">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <VBox spacing="15.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Daily Requirement">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblDailyRequirement" text="৳0">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Projected Balance">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblProjectedBalance" text="৳0">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </padding>
                     <children>
                        <Label fx:id="lblStatusIcon" text="">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblCashStatus" text="Cash position is healthy">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      
      <!-- Cash Management Form -->
      <VBox spacing="20.0">
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <children>
            <Label text="Cash Balance Management">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Current Cash Balance (৳)">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtCashBalance" prefHeight="40.0" promptText="Enter current balance" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Daily Requirement (৳)">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtDailyRequirement" prefHeight="40.0" promptText="Enter daily requirement" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Projected Balance (৳)">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtProjectedBalance" prefHeight="40.0" promptText="Enter projected balance" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Report Date">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <DatePicker fx:id="dpReportDate" prefHeight="40.0" prefWidth="180.0" promptText="Select date" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <HBox spacing="15.0">
               <children>
                  <Button fx:id="btnValidate" mnemonicParsing="false" onAction="#validateCashNeeds" prefHeight="45.0" prefWidth="180.0" text="Validate Cash Needs">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#updateCashRecords" prefHeight="45.0" prefWidth="180.0" text="Update Records">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnReport" mnemonicParsing="false" onAction="#generateCashReport" prefHeight="45.0" prefWidth="180.0" text="Generate Report">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Cash Balance History Table -->
      <VBox spacing="15.0" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label text="Cash Balance History" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#refreshTable" prefHeight="35.0" text="Refresh">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            
            <TableView fx:id="tblCashBalance" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colDate" prefWidth="120.0" text="Date" />
                  <TableColumn fx:id="colBalance" prefWidth="150.0" text="Balance (৳)" />
                  <TableColumn fx:id="colDaily" prefWidth="150.0" text="Daily Req. (৳)" />
                  <TableColumn fx:id="colProjected" prefWidth="150.0" text="Projected (৳)" />
                  <TableColumn fx:id="colDays" prefWidth="100.0" text="Days Cover" />
                  <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</VBox>
