<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulation_of_bangladesh_bank.saida.controller.PublicDebtController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <!-- Page Header -->
      <VBox spacing="5.0">
         <children>
            <Label text="Public Debt Management">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Monitor and service public debt obligations">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
      </VBox>
      
      <!-- Debt Overview -->
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label text="Outstanding Debt">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblOutstandingDebt" text="৳0">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label text="Next Payment Date">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblNextPayment" text="--">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label text="Next Payment Amount">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblPaymentAmount" text="৳0">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label text="Debt Types">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblDebtTypes" text="0">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
      
      <!-- Debt Management Form -->
      <VBox spacing="20.0">
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <children>
            <Label text="Debt Service Management">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Debt Type">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="cmbDebtType" prefHeight="40.0" prefWidth="250.0" promptText="Select debt type" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Outstanding Amount (৳)">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtOutstandingDebt" prefHeight="40.0" promptText="Enter outstanding amount" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Payment Amount (৳)">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtPaymentAmount" prefHeight="40.0" promptText="Enter payment amount" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Payment Date">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <DatePicker fx:id="dpPaymentDate" prefHeight="40.0" prefWidth="180.0" promptText="Select date" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <HBox spacing="15.0">
               <children>
                  <Button fx:id="btnSchedule" mnemonicParsing="false" onAction="#generateServiceSchedule" prefHeight="45.0" prefWidth="200.0" text="Generate Schedule">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnAuthorize" mnemonicParsing="false" onAction="#authorizePayments" prefHeight="45.0" prefWidth="180.0" text="Authorize Payment">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#updateDebtRecords" prefHeight="45.0" prefWidth="180.0" text="Update Records">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Debt Schedule Table -->
      <VBox spacing="15.0" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label text="Debt Service Schedule" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#refreshTable" prefHeight="35.0" text="Refresh">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            
            <TableView fx:id="tblDebt" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colDebtType" prefWidth="140.0" text="Debt Type" />
                  <TableColumn fx:id="colOutstanding" prefWidth="150.0" text="Outstanding (৳)" />
                  <TableColumn fx:id="colPaymentDate" prefWidth="120.0" text="Payment Date" />
                  <TableColumn fx:id="colPaymentAmt" prefWidth="130.0" text="Payment (৳)" />
                  <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                  <TableColumn fx:id="colRemaining" prefWidth="130.0" text="Remaining (৳)" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</VBox>
