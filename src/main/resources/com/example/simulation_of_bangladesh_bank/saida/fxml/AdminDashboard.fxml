<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.simulation_of_bangladesh_bank.saida.controller.AdminDashboardController"
            style="-fx-background-color: #f7f7f7;">

    <!-- Top Header -->
    <top>
        <VBox style="-fx-background-color: #ffffff;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 30;">
                <Label text=" BANGLADESH BANK" style="-fx-text-fill: #000000; -fx-font-size: 24; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="ADMIN PANEL" style="-fx-text-fill: #000000; -fx-font-size: 18; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="lblAdminName" text="Administrator" style="-fx-text-fill: #000000; -fx-font-size: 14; -fx-font-weight: bold;"/>
                    <Label text="System Administrator" style="-fx-text-fill: #444444; -fx-font-size: 11;"/>
                </VBox>
                <Button fx:id="btnLogout" text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #dddddd; -fx-text-fill: #000000; -fx-cursor: hand;"/>
            </HBox>
            <Separator style="-fx-background-color: #cccccc;"/>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Stats Cards -->
            <HBox spacing="20" alignment="CENTER">
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 200; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                    <Label fx:id="lblTotalUsers" text="0" style="-fx-text-fill: #000000; -fx-font-size: 36; -fx-font-weight: bold;"/>
                    <Label text="Total Users" style="-fx-text-fill: #444444; -fx-font-size: 14;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 200; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                    <Label fx:id="lblBankManagers" text="0" style="-fx-text-fill: #000000; -fx-font-size: 36; -fx-font-weight: bold;"/>
                    <Label text="Bank Managers" style="-fx-text-fill: #444444; -fx-font-size: 14;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 200; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                    <Label fx:id="lblFinanceReps" text="0" style="-fx-text-fill: #000000; -fx-font-size: 36; -fx-font-weight: bold;"/>
                    <Label text="Finance Reps" style="-fx-text-fill: #444444; -fx-font-size: 14;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 200; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                    <Label fx:id="lblAdmins" text="0" style="-fx-text-fill: #000000; -fx-font-size: 36; -fx-font-weight: bold;"/>
                    <Label text="Admins" style="-fx-text-fill: #444444; -fx-font-size: 14;"/>
                </VBox>
            </HBox>

            <!-- User Management Section -->
            <HBox spacing="20" VBox.vgrow="ALWAYS">

                <!-- User List -->
                <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text=" User Management" style="-fx-text-fill: #000000; -fx-font-size: 18; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text=" Add User" onAction="#handleAddUser" 
                                style="-fx-background-color: #eeeeee; -fx-text-fill: #000000; -fx-cursor: hand;"/>
                        <Button text=" Refresh" onAction="#refreshUserList"
                                style="-fx-background-color: #eeeeee; -fx-text-fill: #000000; -fx-cursor: hand;"/>
                    </HBox>

                    <TableView fx:id="tblUsers" VBox.vgrow="ALWAYS" style="-fx-background-color: #f0f0f0;">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="colUsername" text="Username" prefWidth="120"/>
                            <TableColumn fx:id="colFullName" text="Full Name" prefWidth="150"/>
                            <TableColumn fx:id="colRole" text="Role" prefWidth="200"/>
                            <TableColumn fx:id="colDepartment" text="Department" prefWidth="180"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="80"/>
                        </columns>
                    </TableView>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text=" Edit Selected" onAction="#handleEditUser"
                                style="-fx-background-color: #dddddd; -fx-text-fill: #000000; -fx-cursor: hand;"/>
                        <Button text=" Reset Password" onAction="#handleResetPassword"
                                style="-fx-background-color: #dddddd; -fx-text-fill: #000000; -fx-cursor: hand;"/>
                        <Button text=" Delete Selected" onAction="#handleDeleteUser"
                                style="-fx-background-color: #dddddd; -fx-text-fill: #000000; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>

                <!-- Add/Edit User Form -->
                <VBox spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 350; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                    <Label fx:id="lblFormTitle" text=" Add New User" style="-fx-text-fill: #000000; -fx-font-size: 16; -fx-font-weight: bold;"/>

                    <VBox spacing="5">
                        <Label text="Username" style="-fx-text-fill: #444444;"/>
                        <TextField fx:id="txtUsername" promptText="Enter username" style="-fx-background-color: #f0f0f0; -fx-text-fill: #000000;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Password" style="-fx-text-fill: #444444;"/>
                        <PasswordField fx:id="txtPassword" promptText="Enter password" style="-fx-background-color: #f0f0f0; -fx-text-fill: #000000;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Full Name" style="-fx-text-fill: #444444;"/>
                        <TextField fx:id="txtFullName" promptText="Enter full name" style="-fx-background-color: #f0f0f0; -fx-text-fill: #000000;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Role" style="-fx-text-fill: #444444;"/>
                        <ComboBox fx:id="cmbRole" promptText="Select role" prefWidth="310" style="-fx-background-color: #f0f0f0; -fx-text-fill: #000000;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Email" style="-fx-text-fill: #444444;"/>
                        <TextField fx:id="txtEmail" promptText="Enter email" style="-fx-background-color: #f0f0f0; -fx-text-fill: #000000;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Phone" style="-fx-text-fill: #444444;"/>
                        <TextField fx:id="txtPhone" promptText="Enter phone" style="-fx-background-color: #f0f0f0; -fx-text-fill: #000000;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Department/Organization" style="-fx-text-fill: #444444;"/>
                        <TextField fx:id="txtDepartment" promptText="Enter department" style="-fx-background-color: #f0f0f0; -fx-text-fill: #000000;"/>
                    </VBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnSave" text=" Save User" onAction="#handleSaveUser" prefWidth="140"
                                style="-fx-background-color: #e0e0e0; -fx-text-fill: #000000; -fx-font-weight: bold; -fx-cursor: hand;"/>
                        <Button text=" Clear" onAction="#handleClearForm" prefWidth="140"
                                style="-fx-background-color: #e0e0e0; -fx-text-fill: #000000; -fx-cursor: hand;"/>
                    </HBox>

                    <Label fx:id="lblMessage" text="" style="-fx-text-fill: #000000; -fx-font-size: 12;" wrapText="true"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 10;">
            <Label text="Â© 2024 Bangladesh Bank Simulation - Admin Panel | All Rights Reserved" 
                   style="-fx-text-fill: #555555; -fx-font-size: 11;"/>
        </HBox>
    </bottom>
</BorderPane>
