<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulation_of_bangladesh_bank.saida.controller.SLRComplianceController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <!-- Page Header -->
      <VBox spacing="5.0">
         <children>
            <Label text="SLR Compliance Management">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Manage Statutory Liquidity Reserve requirements and compliance">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
      </VBox>
      
      <!-- Input Form Card -->
      <VBox spacing="20.0">
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <children>
            <Label text="SLR Calculation">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Current Deposits (৳)">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtCurrentDeposits" prefHeight="40.0" promptText="Enter current deposits amount" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Reserve Holdings (৳)">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtReserveHoldings" prefHeight="40.0" promptText="Enter reserve holdings" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="SLR Rate (%)">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtSLRRate" prefHeight="40.0" promptText="e.g., 13.0" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Compliance Date">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <DatePicker fx:id="dpComplianceDate" prefHeight="40.0" prefWidth="180.0" promptText="Select date" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <HBox spacing="15.0">
               <children>
                  <Button fx:id="btnCalculate" mnemonicParsing="false" onAction="#calculateSLR" prefHeight="45.0" prefWidth="180.0" text="Calculate SLR">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnValidate" mnemonicParsing="false" onAction="#validateCompliance" prefHeight="45.0" prefWidth="180.0" text="Validate Compliance">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnGenerateCert" mnemonicParsing="false" onAction="#generateCertificate" prefHeight="45.0" prefWidth="200.0" text="Generate Certificate">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Result Display Card -->
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Required SLR">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblRequiredSLR" text="৳0.00">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Actual SLR">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblActualSLR" text="৳0.00">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Compliance Status">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblComplianceStatus" text="Not Checked">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
      
      <!-- History Table Card -->
      <VBox spacing="15.0" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label text="SLR Compliance History" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#refreshTable" prefHeight="35.0" text="Refresh">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            
            <TableView fx:id="tblSLRHistory" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colDate" prefWidth="120.0" text="Date" />
                  <TableColumn fx:id="colDeposits" prefWidth="150.0" text="Deposits (৳)" />
                  <TableColumn fx:id="colReserves" prefWidth="150.0" text="Reserves (৳)" />
                  <TableColumn fx:id="colRequired" prefWidth="150.0" text="Required SLR" />
                  <TableColumn fx:id="colActual" prefWidth="120.0" text="Actual %" />
                  <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</VBox>
